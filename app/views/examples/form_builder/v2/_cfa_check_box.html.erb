<%= fields_for(:form, @form, builder: Cfa::Styleguide::CfaV2FormBuilder) do |f| %>
  <%= f.cfa_check_box(:example_method_check_box_a, 'I accept these terms') %>

  <%= f.cfa_check_box(:example_method_with_validation_check_box_b, 'I accept these terms - with input options', required: true, class: 'my-checkbox-class') %>
  <%= f.cfa_check_box(:example_method_with_validation_check_box_c, 'I accept these terms - with wrapper options', wrapper_options: { class: 'wrapper-class' }) %>
  <%= f.cfa_check_box(:example_method_with_validation_check_box_d, 'I accept these terms - with label options', label_options: { class: 'label-class' }) %>

  <%= f.cfa_check_box(:example_method_with_validation_check_box_e, 'I accept these terms - with checked value', :yes, required: true) %>
  <%= f.cfa_check_box(:example_method_with_validation_check_box_f, 'I accept these terms - with checked/unchecked value', :yes, :no, required: true) %>
<% end %>
